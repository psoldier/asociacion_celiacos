<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
	<persistence-unit name="asociacion_celiacos">
  		<provider>org.hibernate.ejb.HibernatePersistence</provider>
    	<class>classes.AvisoPago</class>
    	<class>classes.Central</class>
    	<class>classes.Cuenta</class>
    	<class>classes.Cuota</class>
    	<class>classes.Delegacion</class>
    	<class>classes.Empresa</class>
    	<class>classes.Filial</class>
    	<class>classes.GrupoDeReferencia</class>
    	<class>classes.Item</class>
    	<class>classes.Lugar</class>
    	<class>classes.Movimiento</class>
    	<class>classes.Perfil</class>
    	<class>classes.Producto</class>
    	<class>classes.Socio</class>
    	<class>classes.SocioVirtual</class>
    	<class>classes.TipoCuota</class>
    	<class>classes.TipoPago</class>
    	<class>classes.TipoUnidad</class>
    	<class>classes.Unidad</class>
    	<class>classes.Usuario</class>
    	<properties>
      		<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
	  		<property name="hibernate.connection.username" value="root" />
	  		<property name="hibernate.connection.password" value="root"/>
	  		<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/asociacion_celiacos"/>
	  		<property name="hibernate.default_schema" value="asociacion_celiacos" />
	  		<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
	  		<property name="hibernate.hbm2ddl.auto" value="update" />
	  		<property name="hibernate.show_sql" value="true"/>
	  	</properties>
  	</persistence-unit>
</persistence>